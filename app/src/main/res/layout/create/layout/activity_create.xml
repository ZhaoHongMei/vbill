<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create.CreateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--header 收入与支出-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">
            <TextView
                android:id="@+id/create_header_outcome"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/create_header_outcome"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="10dp"
                android:clickable="true" />

            <TextView
                android:id ="@+id/create_header_income"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/create_header_income"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="10dp"
                android:clickable="true"/>
        </LinearLayout>
        <!--recycleView-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/category_summary"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"/>

        <LinearLayout
            android:id="@+id/create_body"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:visibility="gone"
            android:background="@color/lightGrey"
            android:orientation="vertical">

            <!--1金额-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/chart_1"
                        android:gravity="center" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/create_body_amount"
                        android:gravity="center_vertical"/>
                </LinearLayout>
                <!--输入金额-->
                <EditText
                    android:id="@+id/create_body_amount"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="20dp"/>
            </LinearLayout>

            <!--2时间-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/chart_1"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/create_body_time"
                        android:gravity="center_vertical"/>
                </LinearLayout>
                <!--时间的控件-->
                <!--<DatePicker-->
                    <!--android:id="@+id/create_body_time"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:calendarViewShown="false">-->
                <!--</DatePicker>-->
                <TextView
                    android:id="@+id/create_body_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/bottom_border"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"/>

            </LinearLayout>

            <!--3备注-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <!---->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/chart_1"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/create_body_comment"
                        android:gravity="center_vertical" />
                </LinearLayout>
                <!---->
                <EditText
                    android:id="@+id/create_body_comment"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="20dp" />
            </LinearLayout>

            <!--4完成和取消-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/create_cancel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:layout_margin="5dp"
                    android:text="@string/create_body_cancel"/>
                <Button
                    android:id="@+id/create_done_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@color/colorPrimary"
                    android:text="@string/create_body_done"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>