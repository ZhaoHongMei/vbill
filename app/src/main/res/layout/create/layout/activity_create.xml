<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create.CreateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--header 收入与支出-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">
            <TextView
                android:id="@+id/create_header_outcome"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/create_header_outcome"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="10dp"
                android:clickable="true" />

            <TextView
                android:id ="@+id/create_header_income"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/create_header_income"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="10dp"
                android:clickable="true"/>
        </LinearLayout>
        <!--recycleView-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/category_summary"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>