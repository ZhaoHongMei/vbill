<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <!--image-->
        <ImageView
            android:id="@+id/image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center" />
        <!--category-->
        <TextView
            android:id="@+id/category"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" />
        <!--amounts-->
        <TextView
            android:id="@+id/amounts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" />
        <!--more btn-->
        <ImageView
            android:id="@+id/moreImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/more"/>
        <!--moreview-->
        <LinearLayout
            android:id="@+id/home_detail_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone">
            <TextView
                android:id="@+id/home_detail_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/home_detail_edit"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/home_detail_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/home_detail_delete"
                android:background="@color/red"
                android:textColor="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>